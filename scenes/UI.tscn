code = "shader_type canvas_item;\n\nuniform sampler2D SCREEN_TEXTURE : hint_screen_texture, filter_linear_mipmap;\nuniform float noise_strength = 0.35;\nuniform float block_size = 0.025;\nuniform float jitter_strength = 0.03;\nuniform float chroma_shift = 0.004;\nuniform float tear_strength = 0.06;\n\nfloat rand(vec2 co) {\n\treturn fract(sin(dot(co, vec2(12.9898, 78.233))) * 43758.5453);\n}\n\nvoid fragment() {\n\tvec2 uv = SCREEN_UV;\n\tvec2 block_uv = floor(uv / block_size) * block_size;\n\tfloat block_noise = rand(block_uv + TIME * 0.5);\n\tfloat line_noise = rand(vec2(block_uv.y * 12.0, TIME * 1.3));\n\n\tfloat jitter = (block_noise - 0.5) * jitter_strength;\n\tuv.x += jitter;\n\n\tfloat tear = step(0.92, rand(vec2(TIME * 0.2, block_uv.y * 50.0))) * tear_strength;\n\tuv.x += tear * (rand(vec2(block_uv.y, TIME)) - 0.5);\n\n\tvec2 shift = vec2(chroma_shift * (line_noise - 0.5), 0.0);\n\tvec4 col = texture(SCREEN_TEXTURE, uv);\n\tcol.r = texture(SCREEN_TEXTURE, uv + shift).r;\n\tcol.b = texture(SCREEN_TEXTURE, uv - shift).b;\n\n\tfloat snow = (rand(block_uv * 100.0 + TIME) - 0.5) * noise_strength;\n\tcol.rgb += snow;\n\tCOLOR = col;\n}\n"

